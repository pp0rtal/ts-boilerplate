{
  "author": "Patrick Protal",
  "name": "ts-boilerplate",
  "version": "1.0.0",
  "description": "Typescript boilerplate and tests",
  "main": "dist/main.js",
  "scripts": {
    "postinstall": "npm run build",
    "start": "node .",
    "lint": "npm run prettier && npm run tslint",
    "test": "npm run lint && npm run build:dev && npm run coverage",
    "coverage": "nyc mocha",
    "coverage-html": "nyc --reporter=html mocha",
    "build": "tsc -p tsconfig.prod.json",
    "build:dev": "tsc",
    "prettier": "prettier -l '{src,test}/**/*.{ts,yml,yaml,json,md}'",
    "prettier:write": "prettier --write '{src,test}/**/*.{ts,yml,yaml,json,md}'",
    "tslint": "tslint --project .",
    "tslint:fix": "tslint --fix --project .",
    "watch-ts": "tsc -w"
  },
  "dependencies": {
    "@types/node": "^14.10.2",
    "source-map-support": "^0.5.19",
    "typescript": "^4.0.2"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.12",
    "@types/chai-as-promised": "^7.1.3",
    "@types/mocha": "^8.0.3",
    "@types/sinon-chai": "^3.2.4",
    "@types/sinon-express-mock": "^1.3.8",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "jsdom": "^16.4.0",
    "mocha": "^8.4.0",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "sinon": "^9.0.3",
    "sinon-chai": "^3.5.0",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0"
  }
}
